  display: inline-block;
  vertical-align: middle;
  image-rendering: pixelated;
}

img {
  max-inline-size: 100%;
  block-size: auto;
}

.pkm-wrapper {
  width: 67px;
  height: 56px;
  line-height: 54px;
  text-align: center;
  display: inline-block;
  vertical-align: middle;
  padding: 1px;
}

.pkm {
  filter: saturate(1.2);
  display: inline-block;
  vertical-align: middle;
  image-rendering: crisp-edges;
  image-rendering: pixelated;
}

.pkitem-wrapper {
  width: 32px;
  height: 30px;
  line-height: 28px;
  text-align: center;
  display: inline-block;
  vertical-align: middle;
  padding: 1px;
}

.pkitem {
  display: inline-block;
  vertical-align: middle;
  image-rendering: crisp-edges;
  image-rendering: -moz-crisp-edges;
  image-rendering: -webkit-crisp-edges;
  image-rendering: pixelated;
}

.pkitem-poke-ball {
  width: 18px;
  height: 18px;
  background-position: -566px -272px;
}
.pkitem-dawn-stone {
  width: 18px;
  height: 19px;
  background-position: -484px -222px;
}

@keyframes full-pulse {
  0%,
  100% {
    opacity: 1;
  }
  50% {
    opacity: 0.2;
  }
}

@keyframes helix {
  0% {
    width: 5px;
    height: 5px;
    bottom: -5px;
    z-index: 10;
  }
  25% {
    width: 2px;
    height: 2px;
  }
  50% {
    width: 5px;
    height: 5px;
    bottom: 100%;
    z-index: 20;
  }
  75% {
    width: 8px;
    height: 8px;
  }
  100% {
    width: 5px;
    height: 5px;
    bottom: -5px;
  }
}

@keyframes helix-reversed {
  0% {
    width: 5px;
    height: 5px;
    bottom: 100%;
    z-index: 20;
  }
  25% {
    width: 8px;
    height: 8px;
  }
  50% {
    width: 5px;
    height: 5px;
    bottom: -5px;
    z-index: 10;
  }
  75% {
    width: 2px;
    height: 2px;
  }
  100% {
    width: 5px;
    height: 5px;
    bottom: 100%;
  }
}

body {
  @apply bg-transparent transition-colors dark:text-gray-200 dark:bg-gray-800 relative min-h-screen;
}

:global(.dark) body {
  @apply text-gray-200 bg-gray-800;
}

.g-container {
  @apply max-w-6xl mx-auto px-4 md:px-12 overflow-x-hidden;
}

.p-container {
  @apply w-full md:w-11/12 px-4 md:px-12 xl:w-3/4 mx-auto flex justify-between;
}

.window {
  width: 100% !important;
  margin: 1rem 0 !important;
}
.window-wrap {
  margin: 0 1rem !important;
}

@media (min-width: theme('screens.sm')) {
  .window {
    width: fit-content !important;
    margin: 2rem auto !important;
  }
  .window-wrap {
    margin: 0 2rem !important;
  }
}

.bg + main {
  filter: blur(5px);
}

.drop-shadow-highlight {
  filter: drop-shadow(1px 1px 0 theme('colors.yellow.500'))
    drop-shadow(-1px -1px 0 theme('colors.yellow.500'))
    drop-shadow(-1px 1px 0 theme('colors.yellow.500'))
    drop-shadow(1px -1px 0 theme('colors.yellow.500')) !important;
}

.drop-shadow-mark {
  filter: drop-shadow(2px 2px 0 theme('colors.gray.900'))
    drop-shadow(-2px -2px 0 theme('colors.gray.900'))
    drop-shadow(-2px 2px 0 theme('colors.gray.900'))
    drop-shadow(2px -2px 0 theme('colors.gray.900')) !important;
}

.shake {
  animation: shake 3.2s cubic-bezier(0.36, 0.07, 0.19, 0.97) infinite;
}

@keyframes shake {
  0%,
  50% {
    transform: translate(var(--tw-translate-x),var(--tw-translate-y)) rotate(0);
  }
  5%,
  45% {
    transform: translate(var(--tw-translate-x),var(--tw-translate-y)) rotate(-2deg);
  }
  10%,
  40% {
    transform: translate(var(--tw-translate-x),var(--tw-translate-y)) rotate(2deg);
  }
  15%,
  25%,
  35% {
    transform: translate(var(--tw-translate-x),var(--tw-translate-y)) rotate(-5deg);
  }
  20%,
  30% {
    transform: translate(var(--tw-translate-x),var(--tw-translate-y)) rotate(5deg);
  }
}

